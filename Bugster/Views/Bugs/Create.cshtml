@model Bugster.Models.Bug
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h2>Create New Bug</h2>
        </div>
        <div class="col-sm">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <p>To create a new bug, choose a project and fill in the other bug details.</p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Project" class="control-label"></label>
                    @Html.DropDownList("ProjectId", new SelectList(ViewBag.Projects, "Id", "Name"), "Select Project", new { @id = "ddlProjects", required = "Select Project", @class = "form-control" })
                    <span asp-validation-for="Project" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reporter" class="control-label"></label>
                    @Html.DropDownList("Reporter", new SelectList(ViewBag.Reporters, "Email", "Email"), "Select Reporter", new { @id = "ddlReporter", @class="form-control" })
                    <span asp-validation-for="Reporter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assignee" class="control-label"></label>
                    @Html.DropDownList("AssigneeId", new SelectList(ViewBag.Assignees, "Id", "Email"), "Select Assignee", new { @id = "ddlAssignees", @class = "form-control" })
                    <span asp-validation-for="Assignee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Bugster.Models.Status>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Priority" class="control-label"></label>
                    <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<Bugster.Models.Priority>()"></select>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DueDate" class="control-label"></label>
                    <input asp-for="DueDate" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
